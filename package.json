{
  "name": "iptv-mira-tray",
  "version": "1.0.7",
  "description": "Mira IPTV Player Bridge App",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac"
  },
  "keywords": [
    "iptv",
    "tray",
    "electron",
    "vlc",
    "mira",
    "player",
    "video",
    "bridge"
  ],
  "author": "Yusuf Karakehya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusufkarakehya/iptv-mira-tray"
  },
  "bugs": {
    "url": "https://github.com/yusufkarakehya/iptv-mira-tray/issues"
  },
  "homepage": "https://github.com/yusufkarakehya/iptv-mira-tray#readme",
  "build": {
    "appId": "com.karakehya.iptvmira.tray",
    "productName": "Mira IPTV Player Bridge",
    "extraMetadata": {
      "name": "Mira IPTV Player Bridge"
    },
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "yusufkarakehya",
      "repo": "iptv-mira-tray"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/assets/**/*",
      "src/config/**/*",
      "locales/**/*",
      "LICENSE.txt"
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "icon": "src/assets/icon.icns",
      "notarize": true
    },
    "dmg": {
      "sign": false,
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dmg": {
    "icon": "src/assets/icon.icns"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  }
}