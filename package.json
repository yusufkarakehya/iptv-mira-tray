{
  "name": "iptv-mira-tray",
  "version": "1.0.0",
  "description": "Mira IPTV Player Bridge App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "iptv",
    "tray",
    "electron",
    "vlc",
    "mira",
    "player",
    "video",
    "bridge"
  ],
  "author": "Yusuf Karakehya",
  "license": "EULA",
  "build": {
    "appId": "com.karakehya.iptvmira.tray",
    "productName": "Mira IPTV Player Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "icon.png",
      "locales/**/*"
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  }
}