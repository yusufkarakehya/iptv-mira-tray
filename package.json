{
  "name": "iptv-mira-tray",
  "version": "1.0.3",
  "description": "Mira IPTV Player Bridge App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "iptv",
    "tray",
    "electron",
    "vlc",
    "mira",
    "player",
    "video",
    "bridge"
  ],
  "author": "Yusuf Karakehya",
  "license": "EULA",
  "build": {
    "appId": "com.karakehya.iptvmira.tray",
    "productName": "Mira IPTV Player Bridge",
    "publish": {
      "provider": "github",
      "owner": "yusufkarakehya",
      "repo": "iptv-mira-tray"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "LICENSE.txt",
      "eula.html",
      "locales/**/*"
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "license": "LICENSE.txt"
    },
    "mac": {
      "identity": "Apple Development: yusufkarakehya0726@gmail.com (K3DJK75238)",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  }
}